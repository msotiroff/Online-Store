@model OnlineStore.Common.ViewModels.User.ResetPasswordViewModel

<h2>Reset your password.</h2>
<h5>We will send you an email with instructions how to reset your password.</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="user" asp-controller="manage" asp-action="ResetPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send verification email" class="btn btn-success" />
                <a asp-area="user" asp-controller="account" asp-action="login" class="btn btn-default">Return to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}